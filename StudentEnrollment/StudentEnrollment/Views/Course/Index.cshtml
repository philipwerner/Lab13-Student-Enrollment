@model StudentEnrollment.Models.CourseViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Course Management</h2>
<p><a asp-action="Create">Create New Course</a></p>

<form asp-controller="Course" asp-action="Index" method="get">
    <p>
        <select asp-for="CourseName" asp-items="Model.name">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.courses[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.courses[0].Level)</th>
            <th>@Html.DisplayNameFor(model => model.courses[0].Instructor)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var prop in Model.courses)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => prop.Name)</td>
            <td>@Html.DisplayFor(modelItem => prop.Level)</td>
            <td>@Html.DisplayFor(modelItem => prop.Instructor)</td>

            <td>
                <a asp-action="Edit" asp-route-id="@prop.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@prop.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@prop.ID">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>